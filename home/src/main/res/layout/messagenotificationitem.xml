            android:text="静音" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="音乐" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>